    .swiper-wrapper
        .swiper-slide 
          .slide-bgimg(style="background-image:url(static/img/content/giorgina.jpg)")
            img(src="https://drive.google.com/uc?export=view&id=0B_koKn2rKOkLbVhsNzdIYmlfN1E" class="entity-img")
            a(href="#").swiper-link.btn-main.interactive
              span.btn-main__text View profile
